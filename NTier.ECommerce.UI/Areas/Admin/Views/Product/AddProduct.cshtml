@model Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="panel">
    <header class="panel-heading">
        Ürün Ekleme Paneli
    </header>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label class="col-sm-2 col-sm-2 control-label">Product Name</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 col-sm-2 control-label">Price</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 col-sm-2 control-label">Quantity</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 col-sm-2 control-label">UnitsInStock</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 col-sm-2 control-label">Kategori Seçin</label>
                <div class="col-sm-10">
                    <select name="CategoryID" class="form-control">
                        @foreach (var item in ViewBag.SubCategory)
                        {
                            <option value="@item.ID">@item.Name</option>
                        }
                    </select>
                </div>
                
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Gönder</button>
                </div>
            </div>
        }
    </div>
</section>

