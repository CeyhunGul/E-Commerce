@model AppUser
@{
    ViewBag.Title = "Yeni Kullanıcı Ekleme";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            @ViewBag.Title
        </header>

            <div class="panel-body">
                <form role="form" method="post" action="/Admin/AppUser/Add">
                    <div class="form-group">
                        <label>Adı</label>
                        <input type="text" class="form-control" name="Name" placeholder="Ad">
                    </div>
                    <div class="form-group">
                        <label>Soyad</label>
                        <input type="text" class="form-control" name="Name" placeholder="Soyadı">
                    </div>
                    <div class="form-group">
                        <label>Kullanıcı Adı</label>
                        <input type="text" class="form-control" name="Name" placeholder="Kullanıcı Adı">
                    </div>
                    <div class="form-group">
                        <label>E-Posta</label>
                        <input type="email" class="form-control" name="Name" placeholder="E-Posta">
                    </div>
                    <div class="form-group">
                        <label>Şifre</label>
                        <input type="password" class="form-control" name="Password" placeholder="Şifre">
                    </div>
                    <!-- Burada Validation Hatası Geliyor -->
                    <div class="form-group">
                        <label>Kullanıcı Tipi Seçin</label>
                        @Html.EnumDropDownListFor(x => x.Role, "Kullanıcı Tipi Seçin", new { @Class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-success">Ekle</button>
                    <input type="button" class="btn btn-danger" value="Geri Dön" onclick="history.back()">

                </form>

            </div>

        </section>
</div>




